import nodemailer from "nodemailer";
import dotenv from "dotenv";
dotenv.config();

const transporter = nodemailer.createTransport({
  host: "smtp.office365.com",
  port: 587,
  secure: false,
  auth: {
    user: process.env.EMAIL_USER, // e.g. jopulido@outlook.com
    pass: process.env.EMAIL_PASS, // App password or real password (⚠️ only if testing locally)
  },
});

const mailOptions = {
  from: process.env.EMAIL_USER,
  to: "manumurillo@gmail.com",
  subject: "Test Email from Script",
  text: "Hello! This is a test email sent from Node via Outlook SMTP.",
};

async function sendTestEmail() {
  try {
    const info = await transporter.sendMail(mailOptions);
    console.log("✅ Email sent:", info.response);
  } catch (err) {
    console.error("❌ Error sending email:", err);
  }
}

sendTestEmail();
