{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", // ✅ force CommonJS
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true // ✅ force non-ESM mode
  },
  "include": ["scripts/**/*"]
}
